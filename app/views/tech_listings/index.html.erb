<% if user_signed_in? %>
<p id="notice"><%= notice %></p>

<h1>Listing Tech Listings</h1>
<div>
  <%= link_to 'Flagged listings', tech_flagged_path %>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Source</th>
      <th>Description</th>
      <th>Flagged</th>
      <th>Submitted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tech_listings.each do |tech_listing| %>
      <tr>
        <td><a href="<%= tech_listing.url %>" target="_blank"><%= tech_listing.name %></a></td>
        <td><a href="<%= tech_listing.source_url %>" target="_blank"><%= tech_listing.source %></a></td>
        <td><%= tech_listing.description %></td>
        <td><%= tech_listing.flagged %></td>
        <td><%= tech_listing.submitted %></td>
        <td><%= link_to 'Show', tech_listing %></td>
        <td><%= link_to 'Edit', edit_tech_listing_path(tech_listing) %></td>
        <td><%= link_to 'Destroy', tech_listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
  <%= link_to 'All listings', tech_listings_path %>
</div>

<% if user_signed_in? %>
<div>
  <%= link_to 'Remove all flags', tech_flagged_remove_path %>
</div>
<% end %>
<% end %>