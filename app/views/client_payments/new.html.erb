<% if current_user.admin? %>
<h1>New Payment</h1>
<div>
	<%= form_for :clientpayment, url: {action: "create"} do |f| %>
		<div class="field">
		    <%= f.label :description %><br>
			<%= f.text_area :description, size: "1x50" %>
		</div>
		<div class="field">
			<%= f.label :amount %><br>
			<%= f.number_field :amount %>
		</div>
		<%= f.submit "Create" %>
	<% end %>
</div>
<% else %>
<div>You don't have permissions to view this.</div>
<% end %>